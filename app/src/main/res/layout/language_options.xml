<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:minWidth="270dp"
    android:background="@color/Black">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#CCCCCC"
        android:orientation="vertical">

        <TextView
            android:id="@+id/languageOptions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:text="@string/languageBtn"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:drawableBottom="@color/Orange"
            android:background="@color/White"
            android:layout_marginBottom="2dp"/>

        <RadioGroup
            android:id="@+id/languageSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/english_language_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/Orange"
                android:text="English"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@color/White"
                android:layout_marginBottom="1dp"/>


            <RadioButton
                android:id="@+id/vietnamese_language_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/Orange"
                android:text="Tiếng Việt"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@color/White"
                android:layout_marginBottom="1dp"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:background="@color/White">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/cancel_language"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/Cancel"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/confirm_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/OK"
                android:layout_weight="1"
                android:textStyle="bold"
                android:backgroundTint="@color/Orange"
                android:textColor="@color/White"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>